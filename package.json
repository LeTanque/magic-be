{
  "name": "magic-be",
  "version": "1.0.0",
  "description": "Backend to Magic card collection dashboard",
  "main": "dist/app.js",
  "scripts": {
    "lint": "tsc && eslint . --ext .ts",
    "dev": "yarn lint && nodemon src/app.ts",
    "start": "yarn lint && node .",
    "heroku-postbuild": "yarn start"
  },
  "repository": "git+https://github.com/LeTanque/magic-be.git",
  "keywords": [],
  "author": "letanque",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LeTanque/magic-be/issues"
  },
  "homepage": "https://github.com/LeTanque/magic-be#readme",
  "dependencies": {
    "dotenv": "16.0.3",
    "express": "4.17.3",
    "scryfall-sdk": "^4.1.1"
  },
  "devDependencies": {
    "@types/express": "4.17.3",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@typescript-eslint/parser": "5.57.0",
    "eslint": "8.37.0",
    "nodemon": "2.0.22",
    "ts-node": "10.9.1",
    "typescript": "5.0.3"
  },
  "engines": {
    "node": "19.x",
    "yarn": "1.22.19"
  },
  "nodemonConfig": {
    "verbose": true,
    "execMap": {
      "js": "node --harmony",
      "ts": "ts-node"
    }
  }
}
